
@{
    ViewBag.Title = "Edit";
}

<div class="page-head">
    <h1>
      Update Medical Records
    </h1>
</div>

@model PatientManagementSoftware.Models.MedicalRecordViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Medical Records</h2>

@using (Html.BeginForm("Update", "MedicalRecords", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.RecordID)

    <h2 class="form-signin-heading"></h2>
    <div class="form-group mb-2">
        @Html.LabelFor(model => model.PatientID, new { @class = "sr-only" })
        @Html.DropDownListFor(model => model.PatientID, new SelectList(ViewBag.PatientList, "PatientID", "Name"), "--Select Patient--", new { @class = "form-control", type = "text" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.DoctorID, new { @class = "sr-only" })
        @Html.DropDownListFor(model => model.DoctorID, new SelectList(ViewBag.DoctorList, "DoctorID", "Name"), "--Select Doctor--", new { @class = "form-control", type = "text" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.Diagnosis, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Diagnosis, new { @class = "form-control", placeholder = "Diagnosis", required = "required" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.Treatment, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Treatment, new { @class = "form-control", placeholder = "Treatment", required = "required" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.Medications, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Medications, new { @class = "form-control", placeholder = "Medications", required = "required" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.BloodGroup, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.BloodGroup, new { @class = "form-control", placeholder = "Blood Group", required = "required" })
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.SelectedType, new { @class = "sr-only" })
            @Html.DropDownListFor(model => model.SelectedType, new SelectList(Model.Types ?? new List<string>()), new { @class = "form-control", required = "required" })
        </div>*@

    <button class="btn btn-lg btn-primary btn-block mb-2" type="submit">Submit</button>
}








