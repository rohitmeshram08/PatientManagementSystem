@model PatientManagementSoftware.Models.AppointmentViewModel
@{
    ViewBag.Title = "BookAppinment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h1>
        Book  Appointment
    </h1>
</div>
@using (Html.BeginForm("SaveAppointment", "Appointment", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()

    <h2 class="form-signin-heading"></h2>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.PatientID, new { @class = "sr-only" })
        @Html.DropDownListFor(model => model.PatientID, new SelectList(ViewBag.PatientList, "PatientID", "Name"), "--Select Patient--", new { @class = "form-control", type = "text" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.DoctorID, new { @class = "sr-only" })
        @Html.DropDownListFor(model => model.DoctorID, new SelectList(ViewBag.DoctorList, "DoctorID", "Name"), "--Select Doctor--", new { @class = "form-control", type = "text" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.AppointmentDateTime, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.AppointmentDateTime, new { @class = "form-control", placeholder = "Appointment Date Time", type = "datetime-local", required = "required" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.Reason, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Reason, new { @class = "form-control", placeholder = "Reason", required = "required" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.Status, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Status, new { @class = "form-control", placeholder = "Status", required = "required" })
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.SelectedType, new { @class = "sr-only" })
            @Html.DropDownListFor(model => model.SelectedType, new SelectList(Model.Types ?? new List<string>()), new { @class = "form-control", required = "required" })
        </div>*@

    <button class="btn btn-lg btn-primary btn-block mb-2" type="submit">Submit</button>
}

