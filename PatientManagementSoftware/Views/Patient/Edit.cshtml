@model PatientManagementSoftware.Models.PatientViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    

<div class="page-head">
    <h1>
         Update Patient Details
    </h1>
</div>

@using (Html.BeginForm("Update", "Patient", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()

    <h2 class="form-signin-heading"></h2>


    <div class="form-group mb-2">
        @Html.HiddenFor(model => model.PatientID, new { @class = "form-control", placeholder = "Name", required = "required", autofocus = "autofocus" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.Name, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Name", required = "required", autofocus = "autofocus" })
    </div>

    <div class="datepicker form-group mb-2 form-outline ">
        @Html.LabelFor(model => model.DateOfBirth, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.ContactNumber, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control", placeholder = "Contact Number ", pattern = "\\d{10}", title = "Please enter a 10-digit mobile number without any spaces ", required = "required", })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.Gender, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Gender, new { @class = "form-control", placeholder = "Gender", required = "required" })
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(model => model.Address, new { @class = "sr-only" })
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Address", required = "required" })
    </div>



    <button class="full-length-button" type="submit">Submit</button>
}

