@model List<PatientManagementSoftware.Models.PatientViewModel>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h1>
        Patient List
    </h1>
</div>

@*<h4 class="dig-sg">Patient List</h4>*@
<br />
<div class="row" style="margin-bottom:10px;">
    <div class="col-2">
        <a href="@Url.Action("Register", "Patient")" class="my-buttn-w">Add Patient</a>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Contact Number</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.PatientID</td>
                <td>@patient.Name</td>
                <td>@patient.DateOfBirth</td>
                <td>@patient.Address</td>
                <td>@patient.ContactNumber</td>
                <td>@patient.Gender</td>
                <td>
                    <a href="@Url.Action("Edit", "Patient", new { PatientId = patient.PatientID })" class="edt-buttn">Edit</a>
                    <a href="@Url.Action("Delete", "Patient", new { PatientId = patient.PatientID })" class="dlt-buttn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>