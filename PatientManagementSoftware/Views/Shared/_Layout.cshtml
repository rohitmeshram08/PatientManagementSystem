                    </li>

                    <li>
                        <a href="@Url.Action("Index","Appointment")" class="@((Request.Url.AbsolutePath==Url.Action("Index","Appointment") ) ? "active-menu":"")  @((Request.Url.AbsolutePath==Url.Action("BookAppointment","Appointment") ) ? "active-menu":"")
