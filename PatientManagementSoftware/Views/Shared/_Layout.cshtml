                    <li>
                        <a href="@Url.Action("Index","Patient")" class="@((Request.Url.AbsolutePath==Url.Action("Index","Patient") ) ? "active-menu":"")   @((Request.Url.AbsolutePath==Url.Action("Register","Patient") ) ? "active-menu":"")
