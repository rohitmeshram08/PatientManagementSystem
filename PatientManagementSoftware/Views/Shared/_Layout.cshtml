                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","MedicalRecords")" class="@((Request.Url.AbsolutePath==Url.Action("Index","MedicalRecords") ) ? "active-menu":"")    @((Request.Url.AbsolutePath==Url.Action("AddMedicalRecord","MedicalRecords") ) ? "active-menu":"")  
