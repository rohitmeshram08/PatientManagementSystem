@model PatientManagementSoftware.Models.BillingViewModel

@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice Template</title>
    <script src="https://printjs-4de6.kxcdn.com/print.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .invoice-header {
            background-color: #f7f7f7;
            padding: 20px;
            border-bottom: 1px solid #ddd;
        }

        .invoice-body {
            padding: 20px;
        }

        .invoice-footer {
            background-color: #f7f7f7;
            padding: 20px;
            border-top: 1px solid #ddd;
        }

        .invoice-address {
            margin-bottom: 20px;
        }

            .invoice-address p {
                margin: 5px 0;
            }

        .invoice-table th,
        .invoice-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .invoice-table th {
            background-color: #f2f2f2;
        }

        .invoice-total td {
            border-top: 2px solid #ddd;
        }

        .invoice-total .text-right {
            font-weight: bold;
        }

        /* Custom print button styles */
        .print-button-container {
            text-align: center;
            margin-top: 20px;
        }

        #print {
            background-color: blue;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <div class="invoice-header">
                    <h2 class2>LoTus MediCare</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <div class="invoice-address">
                    <h4>Bill From:</h4>
                    <address>
                        HealthCare<br>
                        Nagpur<br>
                        Maharashtra<br>
                        India<br>
                        Phone: (123) 456-7890<br>
                        Email: HealthCare@gmail.com
                    </address>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="invoice-address">
                    <h4>Bill To:</h4>
                    <address>
                        @Model.PatientName<br>
                        <div class="invoice-details">
                            <p>Bill ID: @Model.BillID</p>
                            <p>Patient ID: @Model.PatientID.</p>
                            <p>Patient Name: @Model.PatientName</p>
                            <p>Bill Date: @Model.BillDate.ToShortDateString()</p>
                            <p>Amount: @Model.Amount</p>
                            <p>Payment Status: @Model.PaymentStatus</p>
                        </div>

                        <!-- Add other patient details here -->
                    </address>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="invoice-body">
                    <table class="table table-bordered invoice-table">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Product 1</td>
                                <td>2</td>
                                <td>$10.00</td>
                                <td>$20.00</td>
                            </tr>
                            <tr>
                                <td>Product 2</td>
                                <td>1</td>
                                <td>$15.00</td>
                                <td>$15.00</td>
                            </tr>
                        </tbody>
                        <tfoot class="invoice-total">
                            <tr>
                                <td colspan="3" class="text-right">Subtotal</td>
                                <td>$35.00</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-right">Tax (10%)</td>
                                <td>$3.50</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-right">Total</td>
                                <td>$38.50</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="invoice-footer">
                    <p>Thank you for your Visit !!</p>
                </div>
            </div>
        </div>
    </div>
    <div class="print-button-container">
        <button id="print" onclick="printInvoice()">Print</button>
    </div>

    <script>
        function printInvoice() {
            var printContents = document.documentElement.innerHTML;
            var w = window.open();
            w.document.write(printContents);
            w.print();
            w.close();
        }
    </script>
</body>
</html>

